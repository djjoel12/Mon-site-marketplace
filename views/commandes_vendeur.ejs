  <!DOCTYPE html>
  <html lang="fr">
  <head>
    <meta charset="UTF-8">
    <title>Mes Commandes</title>
    <style>
      body {
        font-family: Arial;
        padding: 20px;
        background-color: #f2f2f2;
      }
      h1 {
        color: #004080;
      }
      .commande {
        background: white;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      }
      .produit {
        margin-left: 20px;
      }
    </style>
  </head>
  <body>
    <h1>Mes Commandes</h1>

    <% if (commandes.length === 0) { %>
      <p>Aucune commande pour le moment.</p>
    <% } %>

    <% commandes.forEach(c => { %>
      <div class="commande">
        <p><strong>Client :</strong> <%= c.client.nom %></p>
        <p><strong>Date :</strong> <%= new Date(c.date).toLocaleDateString() %></p>
        <p><strong>Statut :</strong> <%= c.statut %></p>

        <h4>Produits :</h4>
        <ul>
          <% c.produits.forEach(p => { %>
            <li class="produit">
              <%= p.produit.nom %> - Quantit√© : <%= p.quantite %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </body>
  </html>

