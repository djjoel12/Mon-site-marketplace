<h1>Mes commandes</h1>

<% if (commandes.length === 0) { %>
  <p>Aucune commande trouvée pour vos produits.</p>
<% } else { %>
  <% commandes.forEach(cmd => { %>
    <div style="border:1px solid #ccc; padding:15px; margin-bottom:20px;">
      <p><strong>Commande ID :</strong> <%= cmd._id %></p>
      <p><strong>Client :</strong> <%= cmd.client.nom %> (<%= cmd.client.email %>)</p>
      <p><strong>Date :</strong> <%= cmd.dateCommande.toLocaleString() %></p>
      <p><strong>Statut :</strong> <%= cmd.statut %></p>

      <h3>Produits commandés dans cette commande :</h3>
      <ul>
        <% cmd.produits.forEach(item => { %>
          <% if(item.vendeurId.toString() === vendeurId.toString()) { %>
            <li>
              Produit ID: <%= item.produitId %> — Quantité: <%= item.quantite %> — Prix unitaire: <%= item.prixUnitaire %>
            </li>
          <% } %>
        <% }) %>
      </ul>
    </div>
  <% }) %>
<% } %>
