                           <!DOCTYPE html>
                           <html lang="fr">
                           <head>
                             <meta charset="UTF-8" />
                             <title>Ma Boutique</title>
                             <link rel="stylesheet" href="/css/styles.css" />
                             <style>
                               :root {
                                 --bleu-clair: #3498db;
                                 --bleu-fonc√©: #2c3e50;
                                 --blanc: #ffffff;
                                 --gris: #ecf0f1;
                                 --gris-fonc√©: #bdc3c7;
                               }

                               body {
                                 background-color: var(--gris);
                                 color: var(--bleu-fonc√©);
                                 font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                                 margin: 0;
                                 padding: 30px;
                               }

                               .container {
                                 max-width: 900px;
                                 margin: auto;
                                 background-color: var(--blanc);
                                 padding: 30px;
                                 border-radius: 12px;
                                 box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
                               }

                               h1 {
                                 text-align: center;
                                 color: var(--bleu-clair);
                                 margin-bottom: 30px;
                               }

                               ul {
                                 display: flex;
                                 justify-content: space-around;
                                 flex-wrap: wrap;
                                 padding: 0;
                                 list-style: none;
                                 margin-bottom: 30px;
                               }

                               ul li a {
                                 background-color: var(--bleu-clair);
                                 color: var(--blanc);
                                 padding: 10px 20px;
                                 border-radius: 30px;
                                 text-decoration: none;
                                 font-weight: 500;
                                 transition: background-color 0.3s ease;
                               }

                               ul li a:hover {
                                 background-color: #5dade2;
                               }

                               .message {
                                 text-align: center;
                                 background-color: var(--gris-fonc√©);
                                 padding: 20px;
                                 border-radius: 10px;
                               }

                               .produit-card {
                                 background-color: var(--gris);
                                 padding: 20px;
                                 border-radius: 10px;
                                 box-shadow: 0 2px 6px rgba(0,0,0,0.05);
                                 text-align: center;
                                 margin-bottom: 20px;
                               }

                               .produit-card h2, .produit-card h4 {
                                 color: var(--bleu-fonc√©);
                               }

                               .produit-card img {
                                 max-width: 150px;
                                 border-radius: 10px;
                                 margin-bottom: 10px;
                               }

                               .produit-lien {
                                 display: inline-block;
                                 margin-top: 15px;
                                 padding: 10px 20px;
                                 background-color: var(--bleu-clair);
                                 color: var(--blanc);
                                 text-decoration: none;
                                 border-radius: 30px;
                                 transition: background-color 0.3s ease;
                               }

                               .produit-lien:hover {
                                 background-color: #5dade2;
                               }

                               .produits-grid {
                                 display: grid;
                                 grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                                 gap: 20px;
                                 margin-top: 20px;
                               }
                             </style>
                           </head>
                           <body>
                             <div class="container">
                               <h1>üéØ Mon Espace Boutique</h1>
                               <ul>
                                 <li><a href="/">Accueil</a></li>
                                 <li><a href="/produits/ajouter">Ajouter un produit</a></li>
                                 <li><a href="/produits/mes">Voir mes produits</a></li>
                                 <li><a href="/commandes/mes-commandes">üì¶ Mes Commandes</a>

                               </ul>

                               <% if (!boutique || Object.keys(boutique).length === 0) { %>
                                 <div class="message">
                                   <p>üö´ Vous n'avez pas encore de boutique.</p>
                                   <a href="/boutique/creer" class="produit-lien">Cr√©er ma boutique</a>
                                 </div>
                               <% } else { %>
                                 <div class="produit-card">
                                   <% if (boutique.logo) { %>
                                     <img src="<%= boutique.logo %>" alt="Logo boutique" />
                                   <% } %>

                                   <h2><%= boutique.nom %></h2>
                                   <p><%= boutique.description %></p>

                                   <hr style="margin: 15px 0; border: 1px solid var(--bleu-clair);" />

                                   <p><strong>Adresse :</strong><br>
                                     <%= boutique.adresse.rue %>, <%= boutique.adresse.ville %> <%= boutique.adresse.codePostal %><br>
                                     <%= boutique.adresse.pays %>
                                   </p>

                                   <p><strong>T√©l√©phone :</strong> <%= boutique.telephone %></p>

                                   <% if (produits && produits.length > 0) { %>
                                     <h3>üì¶ Produits de la boutique</h3>
                                     <div class="produits-grid">
                                       <% produits.forEach(p => { %>
                                         <div class="produit-card">
                                           <% if(p.image) { %>
                                             <img src="<%= p.image %>" alt="<%= p.nom %>" />
                                           <% } %>
                                           <h4><%= p.nom %></h4>
                                           <p><%= p.prix %> <%= p.devise %></p>
                                         </div>
                                       <% }) %>
                                     </div>
                                   <% } else { %>
                                     <p>Aucun produit pour l'instant.</p>
                                   <% } %>

                                   <a href="/boutique/mon/modifier" class="produit-lien">‚úèÔ∏è Modifier ma boutique</a>
                                 </div>
                               <% } %>
                             </div>
                                 <!-- üîó BOUTON PARTAGER LA BOUTIQUE -->
                                 <div style="text-align:center; margin-top: 30px;">
                                   <button onclick="toggleShare()" style="
                                     background-color: #4CAF50;
                                     color: white;
                                     padding: 12px 20px;
                                     border: none;
                                     border-radius: 8px;
                                     font-size: 1rem;
                                     cursor: pointer;
                                   ">
                                     üì§ Partager cette boutique
                                   </button>

                                   <div id="shareBox" style="display:none; margin-top: 20px;">
                                     <% const boutiqueURL = `https://mon-site-marketplace.onrender.com/boutique/${boutique.slug}`; %>

                                     <!-- WhatsApp -->
                                     <a href="https://wa.me/?text=üî• D√©couvrez cette boutique : <%= boutiqueURL %>" target="_blank" style="
                                       display:inline-block;
                                       margin: 10px;
                                       background-color: #25D366;
                                       color: white;
                                       padding: 10px 16px;
                                       border-radius: 6px;
                                       text-decoration: none;
                                       font-size: 16px;
                                     ">üì± WhatsApp</a>

                                     <!-- Facebook -->
                                     <a href="https://www.facebook.com/sharer/sharer.php?u=<%= boutiqueURL %>" target="_blank" style="
                                       display:inline-block;
                                       margin: 10px;
                                       background-color: #4267B2;
                                       color: white;
                                       padding: 10px 16px;
                                       border-radius: 6px;
                                       text-decoration: none;
                                       font-size: 16px;
                                     ">üìò Facebook</a>

                                     <!-- Email -->
                                     <a href="mailto:?subject=D√©couvrez cette boutique&body=Voici le lien : <%= boutiqueURL %>" style="
                                       display:inline-block;
                                       margin: 10px;
                                       background-color: #ff9800;
                                       color: white;
                                       padding: 10px 16px;
                                       border-radius: 6px;
                                       text-decoration: none;
                                       font-size: 16px;
                                     ">‚úâÔ∏è Email</a>

                                     <!-- Copier lien -->
                                     <button onclick="copyToClipboard('<%= boutiqueURL %>')" style="
                                       display:inline-block;
                                       margin: 10px;
                                       background-color: #555;
                                       color: white;
                                       padding: 10px 16px;
                                       border: none;
                                       border-radius: 6px;
                                       font-size: 16px;
                                       cursor: pointer;
                                     ">üìã Copier le lien</button>
                                   </div>
                                 </div>



                                 <script>
                                   function toggleShare() {
                                     const box = document.getElementById('shareBox');
                                     box.style.display = box.style.display === 'none' ? 'block' : 'none';
                                   }

                                   function copyToClipboard(texte) {
                                     navigator.clipboard.writeText(texte).then(() => {
                                       alert("Lien copi√© !");
                                     }, () => {
                                       alert("Erreur lors de la copie.");
                                     });
                                   }
                                 </script>

                           </body>
                           </html>
